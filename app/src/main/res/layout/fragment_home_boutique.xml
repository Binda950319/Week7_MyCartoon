<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.wbh.week7_mycartoon.homepage.BoutiqueFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/boutique_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v4.view.ViewPager>

            <RelativeLayout
                android:id="@+id/boutique_title_linear"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignBottom="@id/boutique_title_view"
                android:background="#7fadacac"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/boutique_title_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="name"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <LinearLayout
                    android:id="@+id/boutique_dot_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"></LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="今日推荐" />

            <TextView
                android:id="@+id/advice_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textView3"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:text="更多>"
                android:textColor="@color/colorBlue"
                android:textSize="12sp" />
        </RelativeLayout>

        <com.wbh.week7_mycartoon.utils.MyGridView
            android:id="@+id/boutique_gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp"></com.wbh.week7_mycartoon.utils.MyGridView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ranking_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="今日热门" />

            <TextView
                android:id="@+id/ranking_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/ranking_tv"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:text="更多>"
                android:textColor="@color/colorBlue"
                android:textSize="12sp" />
        </RelativeLayout>

        <com.wbh.week7_mycartoon.utils.MyGridView
            android:id="@+id/ranking_gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp"></com.wbh.week7_mycartoon.utils.MyGridView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/news_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="今日最新" />

            <TextView
                android:id="@+id/news_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/news_tv"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:text="更多>"
                android:textColor="@color/colorBlue"
                android:textSize="12sp" />
        </RelativeLayout>

        <com.wbh.week7_mycartoon.utils.MyGridView
            android:id="@+id/news_gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp"></com.wbh.week7_mycartoon.utils.MyGridView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/sort_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="分类" />

        <com.wbh.week7_mycartoon.utils.MyGridView
            android:id="@+id/sort_gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp"></com.wbh.week7_mycartoon.utils.MyGridView>

    </LinearLayout>


</ScrollView>
