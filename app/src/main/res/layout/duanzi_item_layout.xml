<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/con_duanzi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="title" />

    <TextView
        android:id="@+id/con_duanzi_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/con_duanzi_title"
        android:layout_marginRight="10dp"
        android:text="creattiem" />

    <TextView
        android:id="@+id/con_duanzi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/con_duanzi_title"
        android:layout_below="@id/con_duanzi_title"
        android:layout_marginTop="10dp"
        android:text="text" />

    <RelativeLayout
        android:id="@+id/duanzi_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/con_duanzi_text"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/duanzi_comment_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dianzan_bg"
            android:button="@null"
            android:checked="false" />

        <TextView
            android:id="@+id/con_duanzi_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="comment" />
    </RelativeLayout>

    <RadioButton
        android:id="@+id/duanzi_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/duanzi_rl"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:background="@drawable/duanzi_share_bg"
        android:button="@null" />


    <RadioButton
        android:id="@+id/duanzi_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/duanzi_share"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/duanzi_collect_bg"
        android:button="@null" />

</RelativeLayout>