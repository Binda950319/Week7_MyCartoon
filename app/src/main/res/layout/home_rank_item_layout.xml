<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/rand_icon_iv"
        android:src="@mipmap/ic_empty"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/rank_name_tv"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/rand_icon_iv"
        android:layout_alignTop="@id/rand_icon_iv"
        android:text="伪恋"
        android:textSize="15sp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人气"
        android:id="@+id/rank_ranking_tv"
        android:layout_below="@+id/rank_name_tv"
        android:layout_toRightOf="@+id/rand_icon_iv"
        android:layout_marginTop="5dp"
        android:textColor="#d5d5d5"
        android:layout_alignLeft="@id/rank_name_tv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态"
        android:id="@+id/rank_state_tv"
        android:textColor="#d5d5d5"
        android:layout_alignLeft="@id/rank_ranking_tv"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/rank_ranking_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类别"
        android:id="@+id/rank_theme_tv"
        android:textColor="#d5d5d5"
        android:layout_alignLeft="@id/rank_name_tv"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/rank_state_tv" />

</RelativeLayout>